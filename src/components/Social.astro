---
const { platform, username } = Astro.props;
---

<a 
  href={`https://www.${platform}.com/${username}`}>
  {platform}
</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: black;
    text-decoration: none;
	border: 2px solid black;
	border-radius: 5px;
  }

  a:hover {
	translate: -2px -4px;
	box-shadow: 4.0px 8.0px 8.0px hsl(0deg 0% 0% / 0.38);
	}
</style>
